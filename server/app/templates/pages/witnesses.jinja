{% extends 'layouts/base.jinja' %}
{% block page %}
<div class="page-wrapper">
    <div class="page-header d-print-none" aria-label="Witness registry header">
        <div class="container-xl">
            <div class="row g-2 align-items-center">
                <div class="col-auto">
                    <span class="avatar avatar-lg bg-green-lt">
                        <i class="ti ti-shield-star" style="font-size: 1.5rem;"></i>
                    </span>
                </div>
                <div class="col">
                    <h2 class="page-title mb-1">
                        Witness Network
                    </h2>
                    <div class="text-secondary">
                        Review trusted witnesses available for DID operations
                    </div>
                </div>
                <div class="col-auto ms-auto">
                    <div class="btn-list">
                        <a href="dids" class="btn btn-outline-primary">
                            <i class="ti ti-fingerprint me-1"></i>DIDs
                        </a>
                        <a href="resources" class="btn btn-outline-secondary">
                            <i class="ti ti-files me-1"></i>Resources
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="container-xl">
            {% include 'components/witness_list.jinja' %}
        </div>
    </div>
</div>
{% endblock %}




