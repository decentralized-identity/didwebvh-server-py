# DID WebVH Server Environment Configuration
# Copy this file to .env and update with your values

# =============================================================================
# Base Configuration
# =============================================================================

# Server domain (required)
WEBVH_DOMAIN=did.example.org

# Admin API key for accessing admin endpoints (required)
WEBVH_ADMIN_API_KEY=change-me

# =============================================================================
# Witness Configuration
# =============================================================================

# Full did:key identifier for the server's witness (optional)
# Example: did:key:z6MkhaXgBZDvotDkL5257faiztiGiC2QtKLGpbnnEGta2doK
WEBVH_WITNESS_ID=

# Full invitation URL with ?oob= parameter for the witness (optional)
# Example: https://witness.example.com/oob-invite?oob=eyJAdHlwZSI6...
WEBVH_WITNESS_INVITATION=

# =============================================================================
# Policy Configuration
# =============================================================================

# WebVH method version to enforce (default: 1.0)
WEBVH_VERSION=1.0

# Require witness signatures for DID operations (default: true)
# Set to 'true' or 'false'
WEBVH_WITNESS=true

# Optional watcher URL to enforce
# Example: https://watcher.example.com
WEBVH_WATCHER=

# Require portability in DID parameters (default: true)
# Set to 'true' or 'false'
WEBVH_PORTABILITY=true

# Require prerotation (next key hashes) in DID parameters (default: true)
# Set to 'true' or 'false'
WEBVH_PREROTATION=true

# Require witness endorsement for resources and credentials (default: true)
# Set to 'true' or 'false'
WEBVH_ENDORSEMENT=true

# =============================================================================
# Database Configuration
# =============================================================================

# Option 1: Use PostgreSQL with full connection URL
# POSTGRES_URL=postgresql://user:password@host:port/database

# Option 2: Use PostgreSQL with individual components
# POSTGRES_USER=postgres
# POSTGRES_PASSWORD=password
# POSTGRES_SERVER_NAME=localhost
# POSTGRES_SERVER_PORT=5432

# If neither POSTGRES_URL nor POSTGRES_* variables are set, SQLite will be used

# =============================================================================
# Feature Flags
# =============================================================================

# Enable tails server functionality (default: true)
# Set to 'true' or 'false'
ENABLE_TAILS=true

